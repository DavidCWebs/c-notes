body
  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size 16px
  color $textColor
  background-color: $mainBG 
  
html
  background-color: $mainBG 

.navbar
  position fixed
  z-index 20
  top 0
  left 0
  right 0
  height $navbarHeight
  background-color $mainBG//#fff
  box-sizing border-box
  border-bottom 1px solid $borderColor

.sidebar
  font-size 15px
  background-color $mainBG
  width $sidebarWidth
  position fixed
  z-index 10
  margin 0
  top $navbarHeight
  left 0
  bottom 0
  box-sizing border-box
  border-right 1px solid $borderColor
  overflow-y auto

.navbar
  .links
    background-color $mainBG!important

.search-box
  input
    color #f9f9fb
    border 1px solid #cfd4db
    background $mainBG url(/assets/img/search.83621669.svg) 0.6rem 0.5rem no-repeat!important

